<h1>Create New Post</h1>
<p>From new html erb file</p>

<%= form_with(model: @post, local: true) do |form| %>
  <div class="field">
    <%= form.label :caption %>
    <%= form.text_field :caption %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Post' %>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>
